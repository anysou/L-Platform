<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="localAliPay"
        android:text="支付宝支付：本地加签" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="remoteAliPay"
        android:text="支付宝支付：服务器加签" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="localWeiXinPay"
        android:text="微信支付：本地生成预支付订单" />

    <Button
        android:layout_width="match_parent"
        android:onClick="remoteWeiXinPay"
        android:layout_height="wrap_content"
        android:text="微信支付：服务器生成预支付订单" />
</LinearLayout>